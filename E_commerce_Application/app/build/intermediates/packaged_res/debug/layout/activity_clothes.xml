<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".clothes">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6DCC9"
        android:orientation="horizontal">

        <!-- Home Logo -->
        <ImageView
            android:id="@+id/home"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Message Text View -->
        <TextView
            android:id="@+id/message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose clothes of your style ;)"
            android:textSize="20sp"
            android:textColor="#100202"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center"
            android:textStyle="italic|bold"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"> <!-- Add margin top here -->

            <!-- Product Image -->
            <ImageView
                android:id="@+id/product1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/clothes1" /> <!-- Replace with actual image resource -->

            <!-- Product Details -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">

                <!-- Product Name -->
                <TextView
                    android:id="@+id/product1_name"
                    android:text="Dress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"/>

                <!-- Product Description -->
                <TextView
                    android:id="@+id/product1_description"
                    android:text="Casual summer dress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"/>

                <!-- Product Price -->
                <TextView
                    android:id="@+id/product1_price"
                    android:text="Rs.946"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <!-- Add to Cart Button -->
                <Button
                    android:id="@+id/p1"
                    android:text="Add to Cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"> <!-- Add margin top here -->

            <!-- Product Image -->
            <ImageView
                android:id="@+id/product2_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/clothes2" /> <!-- Replace with actual image resource -->

            <!-- Product Details -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">

                <!-- Product Name -->
                <TextView
                    android:id="@+id/product2_name"
                    android:text="Elegant Floral Dress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"/>

                <!-- Product Description -->
                <TextView
                    android:id="@+id/product2_description"
                    android:text="Floral print with elegant design"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"/>

                <!-- Product Price -->
                <TextView
                    android:id="@+id/product2_price"
                    android:text="Rs. 1299"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <!-- Add to Cart Button -->
                <Button
                    android:id="@+id/p2"
                    android:text="Add to Cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"> <!-- Add margin top here -->

            <!-- Product Image -->
            <ImageView
                android:id="@+id/product3_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/clothes3" /> <!-- Replace with actual image resource -->

            <!-- Product Details -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">

                <!-- Product Name -->
                <TextView
                    android:id="@+id/product3_name"
                    android:text="Stylish Cocktail Dress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"/>

                <!-- Product Description -->
                <TextView
                    android:id="@+id/product3_description"
                    android:text="Stylish dress for cocktail parties"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"/>

                <!-- Product Price -->
                <TextView
                    android:id="@+id/product3_price"
                    android:text="Rs. 1499"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <!-- Add to Cart Button -->
                <Button
                    android:id="@+id/p3"
                    android:text="Add to Cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"> <!-- Add margin top here -->

            <!-- Product Image -->
            <ImageView
                android:id="@+id/product4_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/clothes5" /> <!-- Replace with actual image resource -->

            <!-- Product Details -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">

                <!-- Product Name -->
                <TextView
                    android:id="@+id/product4_name"
                    android:text="Stylish Cocktail Dress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"/>

                <!-- Product Description -->
                <TextView
                    android:id="@+id/product4_description"
                    android:text="Stylish dress for cocktail parties"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"/>

                <!-- Product Price -->
                <TextView
                    android:id="@+id/product4_price"
                    android:text="Rs. 1499"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <!-- Add to Cart Button -->
                <Button
                    android:id="@+id/p4"
                    android:text="Add to Cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
